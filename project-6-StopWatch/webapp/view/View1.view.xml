<mvc:View
    controllerName="project6.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="main" title="Simple Stopwatch">
        <VBox id="innerFlex" class="sapUiSmallMargin" alignItems="Center" justifyContent="Center">
            <Text id="timeDisplay" text="00:00:00" class="sapUiLargeMargin" textAlign="Center" />
            <HBox id="buttons" class="sapUiSmallMargin">
                <Button id="startBtn" text="Start" type="Accept" press="onStart" />
                <Button id="stopBtn" text="Stop" type="Reject" press="onStop" class="sapUiTinyMarginBeginEnd" />
                <Button id="resetBtn" text="Reset" type="Attention" press="onReset" />
            </HBox>
        </VBox>
    </Page>
</mvc:View>